<% @paintings.each do |painting| %>
  <tr>
    <td><%= painting.title %></td>
    <td><%= painting.saleslink %></td>
    <td><%= painting.artist_id %></td>
    <td><%= link_to 'Show', painting %></td>
    <td><%= link_to 'Edit', edit_painting_path(painting) %></td>
    <td><%= link_to 'Destroy', painting, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

